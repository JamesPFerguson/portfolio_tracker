<h2>
<%= @stock.ticker %>
<%= @stock.try(name) %>
</h2>

</h3> Edit quantity of stock owned: </h3>

<%= form_for(@portfolio_stock) do |f| %>
 <%= f.label :quantity %>
 <%= f.text_field :quantity, @portfolio_stock.quantity %>
 <%= f.submit %>
 <%end%>

<h3> Or, delete the stock from your portfolio </h3>
  <%= form_tag portfolio_stock(@portfolio_stock), method: "delete" %>
  <%= submit_tag "Delete #{@stock.ticker}" %>
  <%end%>
